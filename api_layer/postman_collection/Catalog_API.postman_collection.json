{
	"info": {
		"_postman_id": "catalog-api-collection",
		"name": "Delta Share - Catalog API",
		"description": "Unity Catalog management endpoints for creating, listing, and retrieving catalogs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://api-dev.jll.com/udp/dltshr",
			"type": "string"
		},
		{
			"key": "workspace_url",
			"value": "https://adb-1234567890123456.12.azuredatabricks.net",
			"type": "string"
		},
		{
			"key": "subscription_key",
			"value": "your-subscription-key-here",
			"type": "string"
		},
		{
			"key": "catalog_name",
			"value": "my_catalog",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "List All Catalogs",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text",
						"description": "Databricks workspace URL"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text",
						"description": "API subscription key"
					}
				],
				"url": {
					"raw": "{{base_url}}/catalogs",
					"host": ["{{base_url}}"],
					"path": ["catalogs"]
				},
				"description": "List all Unity Catalogs accessible to the service principal.\n\nResponse 200: Array of catalogs with name, owner, and count"
			},
			"response": []
		},
		{
			"name": "Get Catalog",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text",
						"description": "Databricks workspace URL"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text",
						"description": "API subscription key"
					}
				],
				"url": {
					"raw": "{{base_url}}/catalogs/{{catalog_name}}",
					"host": ["{{base_url}}"],
					"path": ["catalogs", "{{catalog_name}}"]
				},
				"description": "Get details about a specific catalog including name, exists flag, and owner.\n\nResponse 200: catalog_name, exists, owner\nResponse 404: Catalog not found"
			},
			"response": []
		},
		{
			"name": "Create Catalog",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text",
						"description": "Databricks workspace URL"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text",
						"description": "API subscription key"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"comment\": \"Catalog for team analytics\",\n\t\"external_location\": null\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/catalogs/{{catalog_name}}",
					"host": ["{{base_url}}"],
					"path": ["catalogs", "{{catalog_name}}"]
				},
				"description": "Create a new Unity Catalog. Service principal must have CREATE CATALOG privilege.\n\nRequest Body (optional):\n- comment: Catalog description\n- external_location: External storage location name\n\nResponse 201: message, catalog_name, created\nResponse 400: Invalid catalog name\nResponse 409: Catalog already exists"
			},
			"response": []
		}
	]
}
