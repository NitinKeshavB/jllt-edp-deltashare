{
	"info": {
		"_postman_id": "c3d4e5f6-a7b8-4c5d-0e1f-2a3b4c5d6e7f",
		"name": "Delta Share - Health API",
		"description": "Health check and logging test endpoints for the Delta Share API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://your-api.azurewebsites.net",
			"type": "string"
		},
		{
			"key": "workspace_url",
			"value": "https://adb-1234567890123456.12.azuredatabricks.net",
			"type": "string"
		},
		{
			"key": "subscription_key",
			"value": "your-subscription-key-here",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Get Health Status",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text",
						"description": "Databricks workspace URL"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text",
						"description": "Azure API Management subscription key"
					}
				],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				},
				"description": "Check the health status of the Delta Share API service. Returns service version, timestamp, and connection status."
			},
			"response": []
		},
		{
			"name": "Test Logging System",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text",
						"description": "Databricks workspace URL"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text",
						"description": "Azure API Management subscription key"
					}
				],
				"url": {
					"raw": "{{base_url}}/health/logging/test",
					"host": ["{{base_url}}"],
					"path": ["health", "logging", "test"]
				},
				"description": "Test the logging system (Azure Blob Storage, PostgreSQL, Datadog) to ensure logs are being written correctly."
			},
			"response": []
		}
	]
}
