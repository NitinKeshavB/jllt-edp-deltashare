{
	"info": {
		"_postman_id": "b2c3d4e5-f6a7-4b5c-9d0e-1f2a3b4c5d6e",
		"name": "Delta Share - Shares API",
		"description": "Complete API collection for managing Delta Share shares and permissions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://your-api.azurewebsites.net",
			"type": "string"
		},
		{
			"key": "workspace_url",
			"value": "https://adb-1234567890123456.12.azuredatabricks.net",
			"type": "string"
		},
		{
			"key": "subscription_key",
			"value": "your-subscription-key-here",
			"type": "string"
		},
		{
			"key": "share_name",
			"value": "test_share",
			"type": "string"
		},
		{
			"key": "recipient_name",
			"value": "test_recipient",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "List All Shares",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shares?prefix=&page_size=100",
					"host": ["{{base_url}}"],
					"path": ["shares"],
					"query": [
						{
							"key": "prefix",
							"value": "",
							"description": "Optional prefix filter for share names"
						},
						{
							"key": "page_size",
							"value": "100",
							"description": "Maximum number of shares to return (default: 100)"
						}
					]
				},
				"description": "List all shares in the workspace with optional prefix filtering and pagination."
			},
			"response": []
		},
		{
			"name": "Get Share by Name",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shares/{{share_name}}",
					"host": ["{{base_url}}"],
					"path": ["shares", "{{share_name}}"]
				},
				"description": "Get details of a specific share including its data objects and recipients."
			},
			"response": []
		},
		{
			"name": "Create Share",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shares/{{share_name}}?description=Test share for analytics&storage_root=",
					"host": ["{{base_url}}"],
					"path": ["shares", "{{share_name}}"],
					"query": [
						{
							"key": "description",
							"value": "Test share for analytics",
							"description": "Share description (required)"
						},
						{
							"key": "storage_root",
							"value": "",
							"description": "Optional storage root path"
						}
					]
				},
				"description": "Create a new share with the specified name and description."
			},
			"response": []
		},
		{
			"name": "Delete Share",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shares/{{share_name}}",
					"host": ["{{base_url}}"],
					"path": ["shares", "{{share_name}}"]
				},
				"description": "Delete an existing share. This will remove all data objects and recipients from the share."
			},
			"response": []
		},
		{
			"name": "Add Data Objects to Share",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"tables\": [\n\t\t\"catalog.schema.table1\",\n\t\t\"catalog.schema.table2\"\n\t],\n\t\"views\": [],\n\t\"schemas\": []\n}"
				},
				"url": {
					"raw": "{{base_url}}/shares/{{share_name}}/dataobject/add",
					"host": ["{{base_url}}"],
					"path": ["shares", "{{share_name}}", "dataobject", "add"]
				},
				"description": "Add tables, views, or schemas to a share. Provide at least one data object type."
			},
			"response": []
		},
		{
			"name": "Remove Data Objects from Share",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"tables\": [\n\t\t\"catalog.schema.table1\"\n\t],\n\t\"views\": [],\n\t\"schemas\": []\n}"
				},
				"url": {
					"raw": "{{base_url}}/shares/{{share_name}}/dataobject/revoke",
					"host": ["{{base_url}}"],
					"path": ["shares", "{{share_name}}", "dataobject", "revoke"]
				},
				"description": "Remove tables, views, or schemas from a share."
			},
			"response": []
		},
		{
			"name": "Add Recipient to Share",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shares/{{share_name}}/recipients/add?recipient_name={{recipient_name}}",
					"host": ["{{base_url}}"],
					"path": ["shares", "{{share_name}}", "recipients", "add"],
					"query": [
						{
							"key": "recipient_name",
							"value": "{{recipient_name}}",
							"description": "Name of the recipient to add (required)"
						}
					]
				},
				"description": "Grant a recipient access to this share."
			},
			"response": []
		},
		{
			"name": "Remove Recipient from Share",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shares/{{share_name}}/recipients/remove?recipient_name={{recipient_name}}",
					"host": ["{{base_url}}"],
					"path": ["shares", "{{share_name}}", "recipients", "remove"],
					"query": [
						{
							"key": "recipient_name",
							"value": "{{recipient_name}}",
							"description": "Name of the recipient to remove (required)"
						}
					]
				},
				"description": "Revoke a recipient's access to this share."
			},
			"response": []
		}
	]
}
