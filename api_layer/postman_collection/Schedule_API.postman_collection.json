{
	"info": {
		"_postman_id": "d4e5f6a7-b8c9-4d0e-1a2b-3c4d5e6f7a8b",
		"name": "Delta Share - Schedule API",
		"description": "API collection for managing Databricks pipeline schedules and cron jobs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://api-dev.jll.com/udp/dltshr",
			"type": "string"
		},
		{
			"key": "workspace_url",
			"value": "https://adb-1234567890123456.12.azuredatabricks.net",
			"type": "string"
		},
		{
			"key": "subscription_key",
			"value": "your-subscription-key-here",
			"type": "string"
		},
		{
			"key": "pipeline_name",
			"value": "test_pipeline",
			"type": "string"
		},
		{
			"key": "job_name",
			"value": "daily_etl_job",
			"type": "string"
		},
		{
			"key": "cron_expression",
			"value": "0 0 12 * * ?",
			"type": "string"
		},
		{
			"key": "time_zone",
			"value": "UTC",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "List All Schedules",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/schedules?page_size=100&pipeline_name_search_string=",
					"host": ["{{base_url}}"],
					"path": ["schedules"],
					"query": [
						{
							"key": "page_size",
							"value": "100",
							"description": "Number of results per internal API call (1-100, default: 100)"
						},
						{
							"key": "pipeline_name_search_string",
							"value": "",
							"description": "Optional search string to filter pipelines by name"
						}
					]
				},
				"description": "List all schedules across all pipelines. Automatically handles pagination and returns all results.\n\nResponse 200: total count + array of schedule objects"
			},
			"response": []
		},
		{
			"name": "List Schedules for Pipeline",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/schedules/pipeline/{{pipeline_name}}?page_size=100",
					"host": ["{{base_url}}"],
					"path": ["schedules", "pipeline", "{{pipeline_name}}"],
					"query": [
						{
							"key": "page_size",
							"value": "100",
							"description": "Number of results per internal API call (1-100, default: 100)"
						}
					]
				},
				"description": "List all schedules for a specific pipeline with auto-pagination.\n\nResponse 200: pipeline_name, pipeline_id, total, schedules\nResponse 404: Pipeline not found"
			},
			"response": []
		},
		{
			"name": "Create Schedule for Pipeline",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"job_name\": \"{{job_name}}\",\n  \"cron_expression\": \"0 0 12 * * ?\",\n  \"time_zone\": \"UTC\",\n  \"paused\": false,\n  \"email_notifications\": [\n    \"user@example.com\"\n  ],\n  \"tags\": {\n    \"environment\": \"production\",\n    \"owner\": \"data-team\"\n  }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules"]
				},
				"description": "Create a scheduled job for a pipeline. Uses Quartz cron format (6 fields).\n\nRequired: job_name, cron_expression\nOptional: time_zone (default: UTC), paused (default: false), email_notifications, tags\n\nCron examples:\n- Daily at noon: 0 0 12 * * ?\n- Every 15 min: 0 */15 * * * ?\n- Weekdays 9:30 AM: 0 30 9 ? * MON-FRI\n\nResponse 201: message, pipeline_name, pipeline_id, job details\nResponse 400: Invalid request\nResponse 404: Pipeline not found\nResponse 409: Job name already exists"
			},
			"response": []
		},
		{
			"name": "Update Cron Expression",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules/{{job_name}}/cron?cron_expression=0 30 14 * * ?",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules", "{{job_name}}", "cron"],
					"query": [
						{
							"key": "cron_expression",
							"value": "0 30 14 * * ?",
							"description": "New Quartz cron expression (6 fields: sec min hour day-of-month month day-of-week)"
						}
					]
				},
				"description": "Update the cron expression for a scheduled job.\n\nResponse 200: message, pipeline_name, job_name, job_id, cron_expression\nResponse 400: Invalid cron\nResponse 403: Permission denied\nResponse 404: Pipeline or job not found\nResponse 409: Conflict"
			},
			"response": []
		},
		{
			"name": "Update Timezone",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules/{{job_name}}/timezone?time_zone=America/New_York",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules", "{{job_name}}", "timezone"],
					"query": [
						{
							"key": "time_zone",
							"value": "America/New_York",
							"description": "New timezone (e.g., America/New_York, Europe/London, Asia/Tokyo, UTC)"
						}
					]
				},
				"description": "Update the timezone for a scheduled job.\n\nResponse 200: message, pipeline_name, job_name, job_id, time_zone\nResponse 400: Invalid timezone\nResponse 403: Permission denied\nResponse 404: Pipeline or job not found\nResponse 409: Conflict"
			},
			"response": []
		},
		{
			"name": "Delete Schedule by Job Name",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules/{{job_name}}",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules", "{{job_name}}"]
				},
				"description": "Delete a specific schedule by job name. User must be the owner.\n\nResponse 200: message, pipeline_name, pipeline_id, job_name\nResponse 403: Permission denied\nResponse 404: Pipeline or job not found"
			},
			"response": []
		},
		{
			"name": "Delete All Schedules for Pipeline",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Subscription-Key",
						"value": "{{subscription_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules"]
				},
				"description": "Delete all schedules for a pipeline. User must be the owner.\n\nResponse 200: message with count, pipeline_name, pipeline_id\nResponse 404: Pipeline not found"
			},
			"response": []
		}
	]
}
