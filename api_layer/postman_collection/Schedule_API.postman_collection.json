{
	"info": {
		"_postman_id": "d4e5f6a7-b8c9-4d0e-1a2b-3c4d5e6f7a8b",
		"name": "Delta Share - Schedule API",
		"description": "API collection for managing Databricks pipeline schedules and cron jobs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "workspace_url",
			"value": "https://adb-xxxx.azuredatabricks.net",
			"type": "string"
		},
		{
			"key": "pipeline_name",
			"value": "test_pipeline",
			"type": "string"
		},
		{
			"key": "job_name",
			"value": "daily_etl_job",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "List All Schedules",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/schedules?page_size=100&pipeline_name_search_string=",
					"host": ["{{base_url}}"],
					"path": ["schedules"],
					"query": [
						{
							"key": "page_size",
							"value": "100",
							"description": "Number of results per internal API call (1-100, default: 100)"
						},
						{
							"key": "pipeline_name_search_string",
							"value": "",
							"description": "Optional search string to filter pipelines by name"
						}
					]
				},
				"description": "List all schedules across all pipelines. Automatically handles pagination and returns all results. Use pipeline_name_search_string to filter by pipeline name."
			},
			"response": []
		},
		{
			"name": "List Schedules for Pipeline",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/schedules/pipeline/{{pipeline_name}}?page_size=100",
					"host": ["{{base_url}}"],
					"path": ["schedules", "pipeline", "{{pipeline_name}}"],
					"query": [
						{
							"key": "page_size",
							"value": "100",
							"description": "Number of results per internal API call (1-100, default: 100)"
						}
					]
				},
				"description": "List all schedules for a specific pipeline. Automatically handles pagination and returns all schedules for the pipeline."
			},
			"response": []
		},
		{
			"name": "Create Schedule for Pipeline",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"job_name\": \"{{job_name}}\",\n  \"cron_expression\": \"0 0 12 * * ?\",\n  \"time_zone\": \"UTC\",\n  \"paused\": false,\n  \"email_notifications\": [\n    \"user@example.com\"\n  ],\n  \"tags\": {\n    \"environment\": \"production\",\n    \"owner\": \"data-team\"\n  }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules"]
				},
				"description": "Create a scheduled job for a pipeline. Uses Quartz cron format with 6 fields: seconds minutes hours day-of-month month day-of-week. Examples:\n- Daily at noon: '0 0 12 * * ?'\n- Every 15 minutes: '0 */15 * * * ?'\n- Weekdays at 9:30 AM: '0 30 9 ? * MON-FRI'\n- First day of month at midnight: '0 0 0 1 * ?'"
			},
			"response": []
		},
		{
			"name": "Update Cron Expression",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules/{{job_name}}/cron?cron_expression=0 30 14 * * ?",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules", "{{job_name}}", "cron"],
					"query": [
						{
							"key": "cron_expression",
							"value": "0 30 14 * * ?",
							"description": "New Quartz cron expression (6 fields: sec min hour day-of-month month day-of-week)"
						}
					]
				},
				"description": "Update the cron expression for an existing scheduled job. Quartz cron format with 6 required fields. Examples:\n- Every hour: '0 0 * * * ?'\n- Every 30 minutes: '0 */30 * * * ?'\n- Daily at 2:30 PM: '0 30 14 * * ?'\n- Every Monday at 9 AM: '0 0 9 ? * MON'"
			},
			"response": []
		},
		{
			"name": "Update Timezone",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules/{{job_name}}/timezone?time_zone=America/New_York",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules", "{{job_name}}", "timezone"],
					"query": [
						{
							"key": "time_zone",
							"value": "America/New_York",
							"description": "New timezone (e.g., 'America/New_York', 'Europe/London', 'Asia/Tokyo', 'UTC')"
						}
					]
				},
				"description": "Update the timezone for a scheduled job. Use standard timezone names like 'America/New_York', 'Europe/London', 'Asia/Tokyo', or 'UTC'."
			},
			"response": []
		},
		{
			"name": "Delete Schedule by Job Name",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules/{{job_name}}",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules", "{{job_name}}"]
				},
				"description": "Delete a specific schedule for a pipeline by job name. User must be the owner. This will permanently remove the scheduled job."
			},
			"response": []
		},
		{
			"name": "Delete All Schedules for Pipeline",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "X-Workspace-URL",
						"value": "{{workspace_url}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/pipelines/{{pipeline_name}}/schedules",
					"host": ["{{base_url}}"],
					"path": ["pipelines", "{{pipeline_name}}", "schedules"]
				},
				"description": "Delete all schedules for a pipeline. User must be the owner. This will permanently remove all scheduled jobs associated with the pipeline."
			},
			"response": []
		}
	]
}
